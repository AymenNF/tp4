<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>
<!--        <property name="hibernate.connection.url">jdbc:h2:tcp://localhost:9092/uspace</property>-->
        <property name="hibernate.connection.url">jdbc:h2:mem:cruise</property>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="show_sql">false</property>
        <property name="connection.pool_size">5</property>
        <property name="hibernate.id.new_generator_mappings">false</property>
        <property name="hibernate.hbm2ddl.auto">create</property>

        <!-- All entities to map -->
        <mapping class="uspace.domain.cruise.Cruise" />
        <mapping class="uspace.domain.cruise.cabin.CabinType" />
        <mapping class="uspace.domain.cruise.cabin.CabinPriceRegistry" />
        <mapping class="uspace.domain.cruise.cabin.CabinAvailabilities" />
        <mapping class="uspace.domain.cruise.booking.CruiseBookings" />
        <mapping class="uspace.domain.cruise.booking.Booking" />
        <mapping class="uspace.domain.cruise.booking.invoice.Invoice" />
        <mapping class="uspace.domain.cruise.booking.traveler.AdultTraveler" />
        <mapping class="uspace.domain.cruise.booking.traveler.ChildTraveler" />
        <mapping class="uspace.domain.cruise.booking.traveler.SeniorTraveler" />
        <mapping class="uspace.domain.cruise.sport.Sport" />
        <mapping class="uspace.domain.cruise.crew.Crew" />
        <mapping class="uspace.domain.cruise.crew.crewMember.CrewMember" />
        <mapping class="uspace.domain.cruise.crew.crewMember.employeeId.EmployeeIdValidator" />
        <mapping class="uspace.domain.cruise.crew.crewMember.employeeId.EmployeeIdValidatorRegex" />
        <mapping class="uspace.domain.cruise.itinerary.Itinerary" />
        <mapping class="uspace.domain.cruise.itinerary.planet.Planet" />
        <mapping class="uspace.domain.cruise.itinerary.planet.excursion.Excursion" />
        <mapping class="uspace.domain.cruise.zeroGravityExperience.ZeroGravityExperience" />
        <mapping class="uspace.domain.account.Account" />
    </session-factory>
</hibernate-configuration>